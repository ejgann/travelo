
<div class="container">
  <header></header>
  <main>
    <div class="intro">
        <h1> Welcome, <%= User.name %>!<br/></h1>
        <h2>Welcome to your feed!</h2> 
    </div>

    <div class="facebook-data">
        <% if session[:user_id] %>
            <h1><%= @user.name %></h1>
            <h2>Email: <%= @user.email %></h2>
            <h2>Facebook UID: <%= @user.uid %></h2>
            <img src="<%= @user.image %>">
        <% else %>
            <%= link_to('Log in with Facebook!', '/auth/facebook') %>
        <% end %>
    </div>

  </main>
</div>

