        #     onlogin="checkLoginState();">
        # </fb:login-button>

            <div>
                <a href='/auth/facebook' class="btn-facebook"> SIGN UP WITH FACEBOOK</a>
            </div>

            <div>
                <a href='/auth/google' class="btn-facebook btn-google"> SIGN UP WITH GOOGLE</a>
            </div>

        <p> or </p>
        <p> Sign up with your email address </p>

      

        <div class="form">
            <%= form_tag("/users") do %>
                <div class="form-group">
                    <p>
                        <%= label_tag "Whats your name?" %>
                        <br/>
                        <%= text_field_tag "name", "Enter your name." %>
                    </p>
                </div>

                # <% if flash[:notice] %>
                #     <div class="notice">
                #         <h2><%= flash[:notice]%></h2>
                #     </div>
                # <%end%>

                <div class="form-group">
                    <p>
                        <%= label_tag "What's your email?" %>
                        <br/>
                        <%= text_field_tag "email", "Enter your email." %>
                    </p>
                </div>

                <div class="form-group">
                    <p>
                        <%= label_tag "Create a password" %>
                        <br>
                        <%= password_field_tag "password", "Create a password."%>
                    </p>
                </div>

                <div class="form-group">
                    <p>
                        <%= label_tag "Confirm your password" %>
                        </br>
                        <%= password_field_tag "password_confirmation", "Enter your password again."%>
                    </p>
                </div>

                <div class="form-group">
                    <p>
                        <%= label_tag "What should we call you?" %>
                        <br/>
                        <%= text_field_tag "username", "Enter a profile name."%>
                    </p>
                </div>

                <div class="form-group">
                    <p>
                        <%= label_tag "Where will you be traveling?" %>
                        <br/>
                        <%= text_field_tag "location", "Enter a location."%>
                    </p>
                </div>

                <div class="btn btn-primary">
                    <%= submit_tag "SIGNUP" %>
                </div>
            <%end%>

        <p> Have an account? <%= link_to "Login.", login_path %> </p>

