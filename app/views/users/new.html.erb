        <div class="h1-2">
            TRAVELO
            <hr>
        </div>

        <div class="h2-2">
            Sign up for free to start connecting!
        </div>

        # <fb:login-button 
        #     scope="public_profile,email"
        #     onlogin="checkLoginState();">
        # </fb:login-button>

            <div>
                <a href='/auth/facebook' class="btn-facebook"> SIGN UP WITH FACEBOOK</a>
            </div>

            <div>
                <a href='/auth/google' class="btn-facebook btn-google"> SIGN UP WITH GOOGLE</a>
            </div>

        <p> or </p>
        <p> Sign up with your email address </p>

        <%= form_tag("/users") do %>
            <% if @user.errors.any? %>
                <div id="error_explanation">
                    <p> One of your input values is incorrect.  Please check and input again. </p>

                    <ul>
                        <%= @user.errors.full_messages.each do |message|%>
                            <li><%= message %></li>
                        <%end%>
                    </ul>
                </div>
            <%end%>
        <%end%>

        <div class="form">
            <%= form_tag("/users") do %>
                <div class="form-group">
                    <p>
                        <%= label_tag "Whats your name?" %>
                        <br/>
                        <%= text_field_tag "name", "Enter your name." %>
                    </p>
                </div>

                # <% if flash[:notice] %>
                #     <div class="notice">
                #         <h2><%= flash[:notice]%></h2>
                #     </div>
                # <%end%>

                <div class="form-group">
                    <p>
                        <%= label_tag "What's your email?" %>
                        <br/>
                        <%= text_field_tag "email", "Enter your email." %>
                    </p>
                </div>

                <div class="form-group">
                    <p>
                        <%= label_tag "Create a password" %>
                        <br>
                        <%= password_field_tag "password", "Create a password."%>
                    </p>
                </div>

                <div class="form-group">
                    <p>
                        <%= label_tag "Confirm your password" %>
                        </br>
                        <%= password_field_tag "password_confirmation", "Enter your password again."%>
                    </p>
                </div>

                <div class="form-group">
                    <p>
                        <%= label_tag "What should we call you?" %>
                        <br/>
                        <%= text_field_tag "username", "Enter a profile name."%>
                    </p>
                </div>

                <div class="form-group">
                    <p>
                        <%= label_tag "Where will you be traveling?" %>
                        <br/>
                        <%= text_field_tag "location", "Enter a location."%>
                    </p>
                </div>

                <div class="btn btn-primary">
                    <%= submit_tag "SIGNUP" %>
                </div>
            <%end%>

        <div class="form">
            <%= form_for @user do |f| %>

                <div class="form-group" class="field<%= field_with_errors if @user.errors[:name].any?%>">
                    <%= f.label :name, "What's your name?" %>
                    <br/>
                     <%=f.text_field :name, placeholder: "Enter your name.", class: "form-control" %>
                </div>

                <div class="form-group" class="field<%= field_with_errors if @user.errors[:email].any?%>">
                    <%= f.label :email, "What's your email?" %>
                    <br/>
                    <%=f.text_field :email, placeholder: "Enter your email.", class: "form-control" %>
                </div>

                <div class="form-group" class="field<%= field_with_errors if @user.errors[:password].any?%>">
                    <%= f.label :password, "Create a password" %>
                    <br/>
                    <%=f.password_field :password, placeholder: "Create a password.", class: "form-control" %>
                </div>

                <div class="form-group" class="field<%= field_with_errors if @user.errors[:password_confirmation].any?%>">
                    <%= f.label :password_confirmation, "Confirm your password" %>
                    <br/>
                    <%=f.password_field :password_confirmation, placeholder: "Enter your password again.", class: "form-control" %>
                </div>

                <div class="form-group" class="field<%= field_with_errors if @user.errors[:username].any?%>">
                    <%= f.label :username, "What should we call you?" %>
                    <br/>
                    <%=f.text_field :username, placeholder: "Enter a profile name.", class: "form-control" %>
                </div>

                <div class="actions">
                    <br/>
                    <%= f.submit "SIGN UP", class: "btn btn-primary" %>
                </div>
    
            <%end%>
        </div>

        <p> Have an account? <%= link_to "Login.", login_path %> </p>

    </body>
